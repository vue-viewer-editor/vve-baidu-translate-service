{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "mocha tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [ "-r", "ts-node/register", "${workspaceRoot}/test/**/*.spec.ts", "--no-timeouts"],
      "cwd": "${workspaceRoot}"
    }
  ]
}
